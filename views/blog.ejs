<!DOCTYPE html>
<html lang="en">

<head>
    <style>
        .blog-img{
            width: 50px;
            height: 60px;
            border-radius: 100%;
        }
    </style>
    <%- include('./partials/head') %>
        <title>Blog <%= blog.title %></title>

</head>

<body>
    <%- include('./partials/navbar') %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImage %>" alt="" width="400px">
        <pre class="mt-4"><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImage %>" alt="" class="blog-img"><%= blog.createdBy.fullName %>
    </div>
        <%- include('./partials/script') %>

        <div class="container mt-4">
            <h1>Comments (<%= comments.length %>)</h1>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <div class="d-flex align-items-center">
                            <input type="text" name="content" class="form-control" placeholder="Add Comment">
                            <button type="submit" class="btn btn-success">Add</button>
                        </div>
                    </div>
                </form>
                <% } %>
                <div class="mt-3">
                    <% comments.forEach(comment => { %>
                        <img src="<%= comment.createdBy.profileImage %>" alt="" width="50px"><%= comment.createdBy.fullName %>
                        <pre><%= comment.content %></pre>
                    <% }) %>
                </div>
            </div>
</body>

</html>